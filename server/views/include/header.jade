.container
	.row.m-a-md
		nav.navbar.navbar-dark.bg-primary
			a.navbar-brand(href='/')
				img(src='holder.js/100x30?theme=sky&text=#{appTitle}')
			ul.nav.navbar-nav
				if loginuser
					li.nav-item.active
						a.nav-link(href='/admin/car/list') 列表
					li.nav-item.active
						a.nav-link(href='/admin/user/list') 注册用户列表
					li.nav-item.dropdown
						a.nav-link.dropdown-toggle(data-toggle="dropdown",href="#",role="button",aria-haspopup="true",aria-expanded="false") 订单管理
						.dropdown-menu
							a.dropdown-item(href="#") 新订单
							a.dropdown-item(href="#") 欠货订单
							.dropdown-divider
							a.dropdown-item(href="#") 订单列表				
					li.nav-item.dropdown
						a.nav-link.dropdown-toggle(data-toggle="dropdown",href="#",role="button",aria-haspopup="true",aria-expanded="false") 发货管理
						.dropdown-menu
							a.dropdown-item(href="#") 发货登记
							.dropdown-divider
							a.dropdown-item(href="#") 发货单列表				
					li.nav-item.dropdown
						a.nav-link.dropdown-toggle(data-toggle="dropdown",href="#",role="button",aria-haspopup="true",aria-expanded="false") 结算管理
						.dropdown-menu
							a.dropdown-item(href="#") 对账单
							.dropdown-divider
							a.dropdown-item(href="#") 未结算明细						
			ul.nav.navbar-nav.pull-right
				if loginuser
					li.nav-item
						span.nav-link 欢迎您，#{loginuser.name}
					li.nav-item
						span.nav-link |
					li.nav-item
						a.nav-link(href='/logout') 退出
				else
					li.nav-item
						a.nav-link(href='/signin') 登录
					li.nav-item
						span.nav-link |
					li.nav-item
						a.nav-link(href='/signup') 注册

	if syserrmsg
		.alert.alert-danger.alert-dismissible.fade.in
			button.close(type="button", data-dismiss="alert")
				span &times;!{syserrmsg}